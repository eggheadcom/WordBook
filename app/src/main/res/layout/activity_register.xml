<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/tv1_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:text="@string/tv_title_regist"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/tv_edit_jpn"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/tv_edit_eng"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/ed_jpn_regist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_marginRight="20dp"
                android:hint="@string/hint_jpn_regist"
                />


            <EditText
                android:id="@+id/ed_eng_regist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_marginRight="20dp"
                android:hint="@string/hint_eng_regist"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" カテゴリー選択"/>

        <RadioGroup
            android:id="@+id/rbgroup_regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            >


        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tv_err_msg_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textColor="#D81B60"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_add_regist"
            android:layout_marginTop="30dp"
            android:layout_marginRight="6dp"
            style="@style/my_button_1"
            android:text="@string/btn_add_regist"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_reset_regist"
            android:layout_marginTop="30dp"
            android:layout_marginRight="6dp"
            style="@style/my_button_1"
            android:text="@string/btn_reset_regist"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_back_regist"
            android:layout_marginTop="30dp"
            style="@style/my_button_1"
            android:text="@string/btn_back"
            />

    </LinearLayout>



</LinearLayout>